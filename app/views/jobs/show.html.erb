<section class="content-header">
  <h1>Job Details</h1>
</section>

<section class="content">
  <div class="col-lg-8 col-md-8 col-xs-12 col-sm-12">
    <div class="box box-success">
      <div class="box-header">
        <h4>Job Info (From <%= @job.start_date %> to <%= @job.end_date %> )</h4>
      </div>
      <div class="box-body">
        <b>Title: </b><%= @job.title %><br /><br />
        <b>Kind: </b><%= @job.kind %><br /><br />
        <b>Places: </b><%= @job.places %><br /><br />
        <b>Description: </b><%= @job.description %><br /><br />
      </div>
    </div>
  </div>

  <div class="col-lg-4 col-md-4">
    <div class="box box-info">
      <div class="box-header">
        <h4>Organization Info</h4>
      </div>
      <div class="box-body">
        <b>Name: </b><%= @job.organization.name %><br /><br />
        <b>Phone: </b><%= @job.organization.phone %><br /><br />
        <b>Email: </b><%= @job.organization.email %><br /><br />
      </div>
    </div>
  </div>

  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="btn-group">
      <%= link_to "Edit", edit_organization_job_path(@job.organization, @job),
                   class: "btn btn-primary btn-flat pull-left" %>
      <%= link_to "List All", organization_jobs_path(@job.organization), class: "btn btn-default btn-flat" %>
    </div>  
  </div>
</section>

<section class="content-header">
  <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
    <h1 class="content-title">New job subscription</h1>
  </div>
</section>

<section class="content">
  <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
    <div class="box box-success">
      <div class="box-header">
        <h4>New Subscription</h4>
      </div>
      <div class="box-body">
        <%= render "form" %>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-4">
    <div class="box box-info">
      <div class="box-header">
        <h4>Job Info</h4>
      </div>
      <div class="box-body">
        <b>Title: </b><%= @job.title %><br /><br />
        <b>Phone: </b><%= @job.description %><br /><br />
        <b>Start Date: </b><%= @job.start_date %><br /><br />
        <b>End Date: </b><%= @job.end_date %><br /><br />
      </div>
    </div>
  </div>

  <div class="col-lg-4 col-md-4">
    <div class="box box-info">
      <div class="box-header">
        <h4>Organization Info</h4>
      </div>
      <div class="box-body">
        <b>Name: </b><%= @job.organization.name %><br /><br />
        <b>Phone: </b><%= @job.organization.phone %><br /><br />
        <b>Email: </b><%= @job.organization.email %><br /><br />
      </div>
    </div>
  </div>
</section>

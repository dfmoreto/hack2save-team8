<section class="content-header">
  <h1 class="content-title">
    Organizations
    <%= link_to "New Organization", new_organization_path, class: "btn btn-success btn-flat" %>
  </h1>
</section>
<section class="content">
  <% @organizations.each do |organization| %>
    <div class="box box-primary">
      <div class="box-header with-border">
        <div class="box-title">
          <%= content_tag :h3, organization.name %>
        </div>
      </div>
      <div class="box-body">
        <%= content_tag :p, organization.about, class: 'lead' %>
      </div>
      <div class="box-footer">
        <div class="btn-group pull-right">
          <%= link_to 'More info', organization, class: 'btn btn-info btn-flat' %>
          <%= link_to 'Jobs', organization_jobs_path(organization), class: 'btn btn-warning btn-flat' %>
        </div>
      </div>
    </div>
  <% end %>
</section>
